#!/bin/sh

. /etc/duplicity/config.sh

for BACKUP_CONF in /etc/duplicity/backups/db/*.sh
do
  . $BACKUP_CONF
  BACKUP_PATH="$TMPDIR/duplicity-db-backup/$BACKUP_NAME"
  mkdir -p "$BACKUP_PATH"
  mysqldump -h <%= node['duplicity']['database']['host'] %> -u <%= node['duplicity']['database']['user'] %> -p<%= node['duplicity']['database']['password'] %> --databases "$BACKUP_DB" --add-drop-database > "$BACKUP_PATH/$BACKUP_DB.sql"
  nice ionice -c3 duplicity \
    --name "$BACKUP_NAME" \
    --archive-dir "$ARCHIVE" \
    --gpg-options "--homedir=~$DUPLICITY_USER/.gnupg" \
    --full-if-older-than "$FULL_IF_OLDER_THAN" \
    --volsize "$VOLUME_SIZE" \
    --s3-use-new-style \
<% if node['duplicity']['s3_use_european_buckets'] %>
    --s3-european-buckets \
<% end %>
    "$BACKUP_PATH" \
    "s3+http://$S3_BUCKET/$BACKUP_NAME" \
    | logger -t duplicity
done